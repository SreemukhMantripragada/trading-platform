{
  "dashboard": {
    "title": "Pairs Trading Observability",
    "refresh": "5s",
    "schemaVersion": 38,
    "version": 1,
    "uid": null,
    "timezone": "browser",
    "panels": [
      {
        "type": "row",
        "title": "Session Overview",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
        "collapsed": false,
        "id": 1
      },
      {
        "type": "stat",
        "title": "Open Pairs",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 0, "y": 1, "w": 6, "h": 5 },
        "id": 2,
        "fieldConfig": { "defaults": { "decimals": 0 }, "overrides": [] },
        "targets": [
          { "expr": "pairs_executor_open_pairs", "refId": "A" }
        ]
      },
      {
        "type": "stat",
        "title": "Pairs Signals / min",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 6, "y": 1, "w": 6, "h": 5 },
        "id": 3,
        "fieldConfig": { "defaults": { "decimals": 1 }, "overrides": [] },
        "targets": [
          { "expr": "sum(rate(pairs_signals_total[1m]))", "refId": "A" }
        ]
      },
      {
        "type": "stat",
        "title": "Approved Orders / min",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 12, "y": 1, "w": 6, "h": 5 },
        "id": 4,
        "fieldConfig": { "defaults": { "decimals": 1 }, "overrides": [] },
        "targets": [
          { "expr": "sum(rate(risk_orders_approved_total[1m]))", "refId": "A" }
        ]
      },
      {
        "type": "stat",
        "title": "Budget Used (INR)",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 18, "y": 1, "w": 6, "h": 5 },
        "id": 5,
        "fieldConfig": { "defaults": { "unit": "currencyINR", "decimals": 0 }, "overrides": [] },
        "targets": [
          { "expr": "sum(budget_used_inr)", "refId": "A" }
        ]
      },
      {
        "type": "row",
        "title": "Risk & Budget",
        "gridPos": { "x": 0, "y": 6, "w": 24, "h": 1 },
        "collapsed": false,
        "id": 6
      },
      {
        "type": "bargauge",
        "title": "Bucket Usage (INR)",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 0, "y": 7, "w": 12, "h": 7 },
        "id": 7,
        "fieldConfig": {
          "defaults": { "unit": "currencyINR", "max": 0 },
          "overrides": []
        },
        "options": {
          "displayMode": "gradient",
          "orientation": "horizontal",
          "showUnfilled": true
        },
        "targets": [
          { "expr": "budget_used_inr", "legendFormat": "{{bucket}}", "refId": "A" }
        ]
      },
      {
        "type": "timeseries",
        "title": "Broker Funds",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 12, "y": 7, "w": 12, "h": 7 },
        "id": 8,
        "fieldConfig": { "defaults": { "unit": "currencyINR" }, "overrides": [] },
        "targets": [
          {
            "expr": "risk_manager_tradable_equity_inr",
            "legendFormat": "Tradable",
            "refId": "A"
          },
          {
            "expr": "risk_manager_equity_inr",
            "legendFormat": "Total",
            "refId": "B"
          }
        ]
      },
      {
        "type": "row",
        "title": "Latency",
        "gridPos": { "x": 0, "y": 14, "w": 24, "h": 1 },
        "collapsed": false,
        "id": 9
      },
      {
        "type": "timeseries",
        "title": "Pipeline Latency p95",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 0, "y": 15, "w": 12, "h": 7 },
        "id": 10,
        "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(zerodha_tick_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "Tick → Kafka",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(pairs_executor_order_publish_lag_seconds_bucket[5m])) by (le))",
            "legendFormat": "Signal → Order",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(risk_manager_order_lag_seconds_bucket[5m])) by (le))",
            "legendFormat": "Risk Decision",
            "refId": "C"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Processing Time p95",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 12, "y": 15, "w": 12, "h": 7 },
        "id": 11,
        "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(pairs_executor_process_seconds_bucket[5m])) by (le, action))",
            "legendFormat": "{{action}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(paper_matcher_process_seconds_bucket[5m])) by (le, side))",
            "legendFormat": "Paper {{side}}",
            "refId": "B"
          }
        ]
      },
      {
        "type": "row",
        "title": "Flows",
        "gridPos": { "x": 0, "y": 22, "w": 24, "h": 1 },
        "collapsed": false,
        "id": 12
      },
      {
        "type": "timeseries",
        "title": "Tick Rate",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 0, "y": 23, "w": 12, "h": 6 },
        "id": 13,
        "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
        "targets": [
          {
            "expr": "sum(rate(zerodha_ticks_received_total[1m]))",
            "legendFormat": "Ticks",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Signals & Orders / min",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "gridPos": { "x": 12, "y": 23, "w": 12, "h": 6 },
        "id": 14,
        "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
        "targets": [
          {
            "expr": "sum(rate(pairs_signals_total[1m]))",
            "legendFormat": "Signals",
            "refId": "A"
          },
          {
            "expr": "sum(rate(pairs_orders_emitted_total[1m]))",
            "legendFormat": "Orders",
            "refId": "B"
          }
        ]
      }
    ]
  },
  "overwrite": true
}
